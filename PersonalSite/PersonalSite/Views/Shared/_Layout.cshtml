        <ul>
            <li>@Html.ActionLink("Home", "Index", "Home")</li>
            <li>@Html.ActionLink("Projects", "Projects", "Home")</li>
            <li>@Html.ActionLink("Interests", "Interests", "Home")</li>
            <li>@Html.ActionLink("Catalogue?", "Catalogue", "Home")</li>
            <li>@Html.ActionLink("Resume", "Resume", "Home")</li>
        </ul>
    </div>
    <main class="toggle">
        <div>
            @RenderBody()
        </div>
    </main>
</body>
</html>
